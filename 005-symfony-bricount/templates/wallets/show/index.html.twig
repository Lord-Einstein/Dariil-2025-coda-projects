{% extends '_layouts/in_app.html.twig' %}

{% block title %}Détail {{ wallet.label }} | +Count {% endblock %}

{% block content %}
    <div class="container mt-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ wallet.label }}</h1>
            <a href="{{ path('wallets_list') }}" class="btn btn-secondary">Retour aux portefeuilles</a>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h3 class="card-title">Solde : {{ (wallet.totalAmount / 100)|number_format(2, ',', ' ') }} €</h3>
            </div>
        </div>

        <h4>Historique des dépenses</h4>
        <div class="list-group mb-4">
            {% for expense in expenses %}
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">{{ expense.description }}</div>
                        <small class="text-muted">
                            Le {{ expense.createdDate|date('d/m/Y à H:i') }}
                        </small>
                    </div>
                    <span class="badge bg-primary rounded-pill">
                        {{ (expense.amount / 100)|number_format(2, ',', ' ') }} €
                    </span>
                </div>
            {% else %}
                <p>Aucune dépense trouvée.</p>
            {% endfor %}
        </div>

        {% if totalPages > 1 %}
            <nav>
                <ul class="pagination justify-content-center">
                    {% for i in 1..totalPages %}
                        <li class="page-item {% if i == currentPage %}active{% endif %}">
                            <a class="page-link"
                               href="{{ path('wallets_show', { uid: wallet.uid, page: i, limit: limit }) }}">
                                {{ i }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        {% endif %}

    </div>
{% endblock %}
