{% extends '_layouts/in_app.html.twig' %}

{% block title %}Settings | +Count{% endblock %}

{% block content %}
    <div class="container mt-4">

        {# --- HEADER PROFIL --- #}
        <div class="card shadow-sm border-0 mb-4 p-4 text-center"
             style="background: linear-gradient(to bottom, #f8f9fa, #ffffff);">
            <div style="position: relative; display: inline-block;">

                {# Avatar Actuel #}
                {% set currentAvatar = app.user.avatar ?? (app.user.gender == 'M' ? 'https://cdn3d.iconscout.com/3d/premium/thumb/man-avatar-6299539-5187871.png' : 'https://cdn3d.iconscout.com/3d/premium/thumb/with-glasses-3d-icon-png-download-5823066.png') %}

                <img src="{{ currentAvatar }}"
                     alt="Mon Avatar"
                     class="shadow"
                     style="width: 140px; height: 140px; object-fit: cover; border-radius: 50%; border: 4px solid white;">

                {# Bouton Crayon (Ouverture Modal) #}
                <button onclick="openEditModal()"
                        class="btn btn-warning btn-sm shadow-sm"
                        title="Modifier mon profil"
                        style="position: absolute; bottom: 5px; right: 5px; border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                    <i class="fa-solid fa-pen"></i>
                </button>
            </div>

            <h2 class="mt-3 mb-0">{{ app.user.name }}</h2>
            <p class="text-muted">{{ app.user.email }}</p>
        </div>

        {# --- STATISTIQUES --- #}
        <h4 class="mb-3 ps-2 border-start border-4 border-primary">Mes Performances</h4>
        <div class="row">

            {# Wallet Créés #}
            <div class="col-md-6 col-lg-3 mb-3">
                <div class="card border-0 shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center">
                        <div
                            class="icon-box bg-light text-warning rounded-circle d-flex align-items-center justify-content-center me-3"
                            style="width: 50px; height: 50px; font-size: 1.5rem;">
                            <i class="fa-solid fa-crown"></i>
                        </div>
                        <div>
                            <h3 class="m-0 fw-bold">{{ stats.owned }}</h3>
                            <small class="text-muted">Projets créés</small>
                        </div>
                    </div>
                </div>
            </div>

            {# Wallet Rejoints #}
            <div class="col-md-6 col-lg-3 mb-3">
                <div class="card border-0 shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center">
                        <div
                            class="icon-box bg-light text-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                            style="width: 50px; height: 50px; font-size: 1.5rem;">
                            <i class="fa-solid fa-users-rectangle"></i>
                        </div>
                        <div>
                            <h3 class="m-0 fw-bold">{{ stats.joined }}</h3>
                            <small class="text-muted">Projets rejoints</small>
                        </div>
                    </div>
                </div>
            </div>

            {# Connexions #}
            <div class="col-md-6 col-lg-3 mb-3">
                <div class="card border-0 shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center">
                        <div
                            class="icon-box bg-light text-info rounded-circle d-flex align-items-center justify-content-center me-3"
                            style="width: 50px; height: 50px; font-size: 1.5rem;">
                            <i class="fa-solid fa-network-wired"></i>
                        </div>
                        <div>
                            <h3 class="m-0 fw-bold">{{ stats.connections }}</h3>
                            <small class="text-muted">Amis connectés</small>
                        </div>
                    </div>
                </div>
            </div>

            {# Argent dépensé #}
            <div class="col-md-6 col-lg-3 mb-3">
                <div class="card border-0 shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center">
                        <div
                            class="icon-box bg-light text-success rounded-circle d-flex align-items-center justify-content-center me-3"
                            style="width: 50px; height: 50px; font-size: 1.5rem;">
                            <i class="fa-solid fa-money-bill-trend-up"></i>
                        </div>
                        <div>
                            <h3 class="m-0 fw-bold">{{ (stats.spent / 100)|number_format(2, ',', ' ') }} €</h3>
                            <small class="text-muted">Total investi</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# --- MODAL EDIT --- #}
    <div id="editProfileModal" class="modal-overlay hidden">
        <div class="modal-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="m-0">Modifier mon profil</h4>
                <button onclick="closeEditModal()" class="btn-close"></button>
            </div>

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_row(form.name) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_row(form.gender) }}
            </div>

            <hr>
            <label class="form-label fw-bold">Choisir un Avatar</label>
            <div class="avatar-grid">
                {% for url in avatars %}
                    <img src="{{ url }}"
                         onclick="selectAvatar(this, '{{ url }}')"
                         class="avatar-item"
                         alt="Avatar">
                {% endfor %}
            </div>

            {# Champ caché #}
            {{ form_row(form.avatar) }}

            <div class="mt-4 text-end">
                <button type="button" class="btn btn-light me-2" onclick="closeEditModal()">Annuler</button>
                <button type="submit" class="btn btn-success">Enregistrer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    {# --- CSS & JS --- #}
    <style>
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
            z-index: 1050;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s;
        }

        .modal-overlay:not(.hidden) {
            opacity: 1;
            pointer-events: auto;
        }

        .modal-card {
            background: white;
            width: 90%;
            max-width: 600px;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transform: translateY(20px);
            transition: transform 0.3s;
        }

        .modal-overlay:not(.hidden) .modal-card {
            transform: translateY(0);
        }

        .avatar-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(70px, 1fr));
            gap: 10px;
            max-height: 200px;
            overflow-y: auto;
            padding: 5px;
        }

        .avatar-item {
            width: 100%;
            border-radius: 50%;
            cursor: pointer;
            border: 3px solid transparent;
            transition: transform 0.2s;
        }

        .avatar-item:hover {
            transform: scale(1.1);
        }

        .avatar-item.selected {
            border-color: #28a745;
            transform: scale(1.1);
            background: #e8f5e9;
        }
    </style>

    <script>
        function openEditModal() {
            document.getElementById('editProfileModal').classList.remove('hidden');
            // Pré-sélection visuelle de l'avatar actuel
            const current = document.getElementById('profile_avatar').value;
            if (current) {
                document.querySelectorAll('.avatar-item').forEach(img => {
                    if (img.src === current) img.classList.add('selected');
                });
            }
        }

        function closeEditModal() {
            document.getElementById('editProfileModal').classList.add('hidden');
        }

        function selectAvatar(el, url) {
            document.querySelectorAll('.avatar-item').forEach(i => i.classList.remove('selected'));
            el.classList.add('selected');
            document.getElementById('profile_avatar').value = url; // Remplissage du champ caché
        }

        // Fermeture au clic dehors
        document.getElementById('editProfileModal').addEventListener('click', function (e) {
            if (e.target === this) closeEditModal();
        });
    </script>

{% endblock %}
