{% extends '_layouts/in_app.html.twig' %}

{% block title %}Ajouter une dépense{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/forms.css') }}">
{% endblock %}

{% block content %}
    <div class="container-small">
        <div class="section-header">
            <a href="{{ path('wallets_show', {uid: wallet.uid}) }}" class="back-link">
                <i class="fa-solid fa-arrow-left"></i> Retour
            </a>
            <h1>Nouvelle dépense</h1>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}

                {# 1. Montant #}
                <div class="form-group amount-group">
                    {{ form_label(form.amount) }}
                    <div class="input-wrapper">
                        {{ form_widget(form.amount, {'attr': {'class': 'big-input'}}) }}
                        <span class="currency-suffix">€</span>
                    </div>
                    {{ form_errors(form.amount) }}
                </div>

                {# 2. Sélecteur d'icônes (Grille) #}
                <div class="form-group">
                    <label class="form-label">Catégorie</label>
                    <div class="icons-grid">
                        {% for choice in form.icon %}
                            <div class="icon-option">
                                {# On cache le vrai input radio #}
                                {{ form_widget(choice, {'attr': {'class': 'hidden-radio'}}) }}

                                {# On stylise le label qui contient l'icône #}
                                {{ form_label(choice, null, {
                                    'label_html': true,
                                    'label': '<i class="' ~ choice.vars.value ~ '"></i>'
                                }) }}
                            </div>
                        {% endfor %}
                    </div>
                    {{ form_errors(form.icon) }}
                </div>

                {# 3. Description #}
                <div class="form-group">
                    {{ form_row(form.description) }}
                </div>

                <button type="submit" class="btn btn-primary full-width">Valider</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    {# CSS spécifique pour cette page (à déplacer idéalement dans ton fichier style.css) #}
    <style>
        .amount-group {
            text-align: center;
            margin-bottom: 2rem;
        }

        .big-input {
            font-size: 2.5rem;
            font-weight: 800;
            text-align: center;
            border: none;
            border-bottom: 2px solid #e5e7eb;
            width: 150px;
        }

        .big-input:focus {
            outline: none;
            border-color: #2563eb;
        }

        /* Grille d'icônes */
        .icons-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

        .hidden-radio {
            display: none;
        }

        /* Le style par défaut de l'icône (le label) */
        .icon-option label {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            background-color: #f3f4f6;
            border-radius: 12px;
            cursor: pointer;
            font-size: 1.2rem;
            color: #4b5563;
            transition: all 0.2s;
            border: 2px solid transparent;
        }

        .icon-option label:hover {
            background-color: #e5e7eb;
        }

        /* Quand le radio est CHECKED, on change le style du label frère */
        .hidden-radio:checked + label {
            background-color: #eff6ff;
            color: #2563eb;
            border-color: #2563eb;
            transform: scale(1.1);
        }
    </style>
{% endblock %}
